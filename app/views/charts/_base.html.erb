<div class="container">
  <div class="header">
    <div class="logo-container">
      <%= image_tag 'gvt_logo.png', alt: 'gvt-logo', class: 'gvt-logo' %>
    </div>
    <div class="headline-container">
      <h1 class='headline'>GVT Adoption Progress:
        <%= @entry.created_at.strftime(" %b %-d, %Y") %>
      </h1>
      <%= render "tagline_#{base}" %>
    </div>
  </div>
  <script type="text/javascript" charset="utf-8">
    Highcharts.setOptions({
      global: {
        timezoneOffset: 420
      }
    });
  </script>
  <div class="chart">
    <%= area_chart(@chart_data,
      colors: ['#15bbaf'],
      height: "335px",
      library: {
        plotOptions: {
          series: {
            animation: false,
            fillColor: {
              linearGradient: { x1: 0, x2: 0, y1: 0, y2: 1 },
              stops: [
                [0, '#62e2d9'],
                [1, '#e1f9f7'],
              ]
            }
          }
        },
        chart: {
          height: 340
        }
      }) %>
  </div>
  <div class="footer">
    <span>Total amount invested across all programs and funds.</span>
    <span class="credits">
      Charts by
      <span class="primary">@GVTProgressBot</span>
      <span class="separator">|</span>
      Data by
      <span class="primary">@genesis_vision</span>
      <span class="separator">|</span>
      Made by
      <span class="primary">@janklimo</span>
    </span>
  </div>
</div>

